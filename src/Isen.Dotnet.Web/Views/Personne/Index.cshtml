@{
    ViewData["Title"] = "Liste des personnes";
}
@using Isen.Dotnet.Library.Model;
@model IEnumerable<Personne>;

<div>
    <h1>Liste <small>de toutes les personnes</small></h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Pr√©nom</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Telephone</th>
                <th scope="col">Mail</th>
                <th scope="col">Role</th>
                <th scope="col">Service</th>
                <th scope="col">Action...</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var personne in Model)
            {
            <tr>
                <th scope="row">@personne.Id</th>
                <td>@personne.Nom</td>
                <td>@personne.Prenom</td>
                <td>@personne.Date_anniversaire.Value.ToShortDateString() (@personne.Age ans)</td>
                <td>@personne.Telephone</td>
                <td>@personne.Mail</td>
                <td>@personne.TypeRole?.NomRole</td>
                <td>@personne.TypeService?.NomService</td>
                <td>
                    <a class="btn btn-outline-primary"
                        asp-controller="Personne"
                        asp-action="Edit"
                        asp-route-id="@personne.Id">Modifier</a>
                    <a class="btn btn-outline-danger"
                        asp-controller="Personne"
                        asp-action="Delete"
                        asp-route-id="@personne.Id">Supprimer</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>