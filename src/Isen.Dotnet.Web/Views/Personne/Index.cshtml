@{
    ViewData["Title"] = "Edition d'un personne";
}
@using Isen.Dotnet.Library.Model;
@using Isen.Dotnet.Library.Context;
@model Personne;
@inject ApplicationDbContext _context;

<h2>Création ou édition <small>d'une personne</small></h2>
<form class="form-group" asp-action="Edit">

    <h3>Identité <small>de la personne</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Nom">Nom de famille</label>
                <input
                    id="Nom"
                    type="text"
                    class="form-control"
                    placeholder="Nom de famille"
                    asp-for="Nom"
                    value="@Model?.Nom" />
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Prenom">Prénom</label>
                <input
                    id="Prenom"
                    type="text"
                    class="form-control"
                    placeholder="Prenom"
                    asp-for="Prenom"
                    value="@Model?.Prenom" />
            </div>
        </div>
    </div>

    @{
        var dateTimeString = "";
        if (Model?.Date_anniversaire != null) 
            dateTimeString = Model.Date_anniversaire.Value.ToString("dd/MM/yyyy");
    }

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Anniversaire">Date de naissance</label>
                <input
                    id="Anniversaire"
                    type="text"
                    class="form-control"
                    placeholder="jj/mm/aaaa"
                    asp-for="Date_anniversaire"
                    value="@dateTimeString" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Telephone">Téléphone</label>
                <input
                    id="Telephone"
                    type="text"
                    class="form-control"
                    placeholder="06-..-..-..-.."
                    asp-for="Telephone"
                    value="@Model?.Telephone" />
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="Mail">Email</label>
                <input
                    id="Mail"
                    type="text"
                    class="form-control"
                    placeholder="Email"
                    asp-for="Mail"
                    value="@Model?.Mail" />
            </div>
        </div>
    </div>

    <h3>Rôle <small>de la personne</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">   
                <label for="TypeRole">Role</label>
               @Html.DropDownListFor(
                    // Quel est le champ du modèle que l'on 
                    // met à jour avec cette liste ?
                    p => p.TypeRoleId,
                    // Liste des éléments
                    new SelectList(
                        // La liste
                        _context.RoleCollection,
                        // Le champ d'id
                        "Id",
                        // Le champ de libellé
                        "NomRole"
                    ),
                    // Item par défaut
                    "Sélectionnez un rôle...",
                    // Classe CSS
                    new { @class = "form-control" }
                )
            </div> 
        </div>
    </div>

    <h3>Service <small>de la personne</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="TypeService">Service</label>
                @Html.DropDownListFor(
                    // Quel est le champ du modèle que l'on 
                    // met à jour avec cette liste ?
                    p => p.TypeServiceId,
                    // Liste des éléments
                    new SelectList(
                        // La liste
                        _context.ServiceCollection,
                        // Le champ d'id
                        "Id",
                        // Le champ de libellé
                        "NomService"
                    ),
                    // Item par défaut
                    "Sélectionnez un service...",
                    // Classe CSS
                    new { @class = "form-control" }
                )
            </div>
        </div>
    </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Valider</button>
                <a class="btn btn-secondary" asp-action="Index">Annuler</a>
            </div>
        </div>
    </div>

</form>  