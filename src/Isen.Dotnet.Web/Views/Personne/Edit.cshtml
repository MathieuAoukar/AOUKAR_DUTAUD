
@{

    ViewData["Title"] = "Edition d'un personne";

}

@using Isen.Dotnet.Library.Model;

@using Isen.Dotnet.Library.Context;

@model Personne;

@inject ApplicationDbContext _context;



<h2>Création ou édition <small>d'une personne</small></h2>

<form class="form-group" asp-action="Edit">



    <h3>Identité <small>de la personne</small></h3>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Nom">Nom de famille</label>
                <input
                    id="Nom"
                    type="text"
                    class="form-control"
                    placeholder="Nom de famille"
                    asp-for="Nom"
                    value="@Model?.Nom" />

            </div>

        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="Prenom">Prénom</label>
                <input
                    id="Prenom"
                    type="text"
                    class="form-control"
                    placeholder="Prénom"
                    asp-for="Prenom"
                    value="@Model?.Prenom" />
            </div>
        </div>
    </div>

    <h3>Informations <small>de la personne</small></h3>
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Date_anniversaire">Date_anniversaire</label>
                 <input
                    id="Date_anniversaire"
                    type="text"
                    class="form-control"
                    placeholder="Date d'anniversaire"
                    asp-for="Date_anniversaire"
                    value="@Model?.Date_anniversaire" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="Telephone">Numéro de téléphone</label>
                <input
                    id="Telephone"
                    type="text"
                    class="form-control"
                    placeholder="Numéro de téléphone"
                    asp-for="Telephone"
                    value="@Model?.Telephone" />
            </div>
        </div>

        <div class="col-6">
            <div class="form-group">
                <label for="Mail">Mail</label>
                <input
                    id="Mail"
                    type="text"
                    class="form-control"
                    placeholder="Mail"
                    asp-for="Mail"
                    value="@Model?.Mail" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="Service">Service</label>
                @Html.DropDownListFor(
                    // Quel est le champ du modèle que l'on 
                    // met à jour avec cette liste ?
                    p => p.TypeServiceId,
                    // Liste des éléments
                    new SelectList(
                        // La liste
                        _context.ServiceCollection,
                        // Le champ d'id
                        "Id",
                        // Le champ de libellé
                        "Name"
                    ),
                    // Item par défaut
                    "Sélectionnez un service...",
                    // Classe CSS
                    new { @class = "form-control" }
                )
            </div>
        </div>

        <div class="col-6">
            <label for="Role">Roles</label>
            @using (Html.BeginForm("Index", "Home"))
            {
                foreach (var item in _context.RoleCollection)
                {
                    <div class="checkbox">
                        <label>
                            <input 
                                type="checkbox"
                                name="RelationRolePersonne.Role"
                                value="@item.NomRole"
                                @if(Model.Roles().Contains(item.NomRole))
                                {
                                    <text> checked </text> 
                                }
                            /> @item.NomRole
                        </label>
                    </div>
                }
            }
        </div>

        @{
            var dateTimeString = "";
            if (Model?.Date_anniversaire != null) 
                dateTimeString = Model.Date_anniversaire.Value.ToString("dd/MM/yyyy");
        }

        <div class="col-12">
            <div class="form-group">
                <label for="Date_anniversaire">Date de naissance</label>
                <input
                    id="Date_anniversaire"
                    type="text"
                    class="form-control"
                    placeholder="jj/mm/aaaa"
                    asp-for="Date_anniversaire"
                    value="@dateTimeString" />
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Valider</button>
                <a class="btn btn-secondary" asp-action="Index">Annuler</a>
            </div>
        </div>
    </div>

</form>        